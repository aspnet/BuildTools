<!--
  WARNING: These targets are intended for building Microsoft's ASP.NET Core repos and are not intended
  for use outside of Microsoft.
-->
<Project>
  <PropertyGroup>
    <_ApiCheckTaskAssembly>$(MSBuildThisFileDirectory)..\tools\netstandard2.0\Microsoft.AspNetCore.BuildTools.ApiCheck.Task.dll</_ApiCheckTaskAssembly>
  </PropertyGroup>

  <UsingTask TaskName="Microsoft.AspNetCore.BuildTools.ApiCheck.Task.ApiCheckTask"
    AssemblyFile="$(_ApiCheckTaskAssembly)"
    Condition=" '$(MSBuildRuntimeType)' == 'Core' " />
  <UsingTask TaskName="Microsoft.AspNetCore.BuildTools.ApiCheck.Task.ApiCheckGenerateTask"
    AssemblyFile="$(_ApiCheckTaskAssembly)"
    Condition=" '$(MSBuildRuntimeType)' == 'Core'" />
</Project>
